  "version": "0.2.0",
  "configurations": [
    {
      "name": "Woodpecker server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/cmd/server/",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Woodpecker agent",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/cmd/agent/",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Woodpecker run test pipeline cli",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/cmd/cli/",
      "console": "integratedTerminal",
      "args": [
        "exec",
        "${workspaceFolder}/cmd/cli/test.yaml"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Woodpecker UI",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start",
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}/web",
      "port": 3000,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/web/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}